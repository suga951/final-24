---
import Layout from "../layouts/Layout.astro";
import EmergencyMenu from '../components/EmergencyMenu';
import AlertButton from '../components/AlertButton.astro';
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-screen bg-blue-100 relative">
    
    <!-- Sección para actualizar perfil -->
    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-lg">
      <h2 class="text-2xl font-semibold text-center mb-4">Editar Perfil</h2>

      <!-- Foto de perfil -->
      <div class="flex flex-col items-center mb-6">
        <img src="/public/icons/profile-icon.webp" alt="Perfil" class="w-24 h-24 rounded-full mb-2">
        <button class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600">Cambiar foto de perfil</button>
      </div>

      <!-- Formulario para actualizar datos -->
      <form class="space-y-4">
        <!-- Nombre -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
          <input type="text" id="name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Tu nombre">
        </div>

        <!-- Dirección -->
        <div>
          <label for="address" class="block text-sm font-medium text-gray-700">Dirección</label>
          <input type="text" id="address" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Tu dirección">
        </div>

        <!-- Código Postal -->
        <div>
          <label for="postalCode" class="block text-sm font-medium text-gray-700">Código Postal</label>
          <input type="text" id="postalCode" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Tu código postal">
        </div>

        <!-- Edad -->
        <div>
          <label for="age" class="block text-sm font-medium text-gray-700">Edad</label>
          <input type="number" id="age" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Tu edad">
        </div>

        <!-- Botón de Guardar Cambios -->
        <div class="text-center">
          <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600">Guardar Cambios</button>
        </div>
      </form>
    </div>

    <!-- Botón de Alerta y Emergencias con margen inferior -->
    <div class="mt-6"> <!-- Esto añade un margen inferior -->
      <AlertButton />
      <EmergencyMenu client:load />
    </div>

    <!-- Navbar: móvil abajo, escritorio arriba -->
    <nav class="w-full fixed bottom-0 lg:top-0 lg:bottom-auto bg-blue-600 text-white flex justify-around items-center py-4 shadow-md lg:flex-row flex-row">
      <a href="/chat" class="flex flex-col items-center">
        <img src="/icons/home.webp" alt="Inicio" class="w-6 h-6 mb-1" />
        <span class="text-xs">Inicio</span>
      </a>
      <a href="/help" class="flex flex-col items-center">
        <img src="/icons/help-icon.webp" alt="Ayuda" class="w-6 h-6 mb-1" />
        <span class="text-xs">Ayuda</span>
      </a>
      <a href="/profile" class="flex flex-col items-center">
        <img src="/icons/profile-icon.webp" alt="Perfil" class="w-6 h-6 mb-1" />
        <span class="text-xs">Perfil</span>
      </a>
    </nav>
  </div>
</Layout>
