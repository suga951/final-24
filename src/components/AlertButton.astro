<!-- Botón de alerta -->
<button
  id="alertButton"
  class="fixed left-4 w-24 h-24 bg-red-500 text-white text-lg font-bold rounded-full shadow-lg active:shadow-sm active:translate-y-1 transition-all duration-200 z-50 p-4"
  style="bottom: 80px;"
>
  ALERTAR
</button>

<!-- Modal del formulario de alerta -->
<section
  id="alertModal"
  class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden dark:bg-opacity-70"
>
  <article
    id="alertModalContent"
    class="bg-white dark:bg-gray-800 dark:text-white p-6 md:p-10 rounded-lg shadow-md w-full max-w-md relative transition-transform duration-300 transform scale-50 opacity-0 origin-bottom-left"
  >
    <button
      class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-white"
      id="closeAlertModalBtn"
      type="button"
      aria-label="Cerrar modal"
    >
      Cerrar
    </button>
    <header>
      <h2 class="text-center text-2xl mb-4">Generar Alerta</h2>
    </header>
    <form action="/alert" method="post">
      <div class="mb-4">
        <label for="incident" class="sr-only">Descripción del Incidente</label>
        <textarea
          id="incident"
          name="incident"
          placeholder="Descripción del incidente"
          class="shadow appearance-none border rounded-xl w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          required></textarea>
      </div>
      <div class="mb-4">
        <label for="location" class="sr-only">Ubicación</label>
        <input
          type="text"
          id="location"
          name="location"
          placeholder="Ubicación"
          class="shadow appearance-none border rounded-full w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          required
        />
      </div>
      <div class="mb-4">
        <label for="photo" class="sr-only">Subir Foto/Video</label>
        <input
          type="file"
          id="photo"
          name="photo"
          accept="image/*,video/*"
          class="shadow appearance-none border rounded-full w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <button
        type="submit"
        class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full w-full focus:outline-none focus:shadow-outline"
      >
        Enviar Alerta
      </button>
    </form>
  </article>
</section>
<script src="/scripts/alertModal.js" defer></script>
<style>
  /* Transiciones para la animación */
  #alertModalContent {
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }
</style>
