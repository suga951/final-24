---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='estructura'>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-size: 16px;
    box-sizing: border-box;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }
  body {
    width: 100%;
    height: 100svh;
  }

  *,
  *::before,
  *::after {
    padding: 0;
    margin: 0;
    box-sizing: inherit;
  }

  a {
    text-decoration: none;
  }

  img {
    width: 100%;
  }
  @media (width <= 768px) {
    .estructura {
      background-color: #60a5fa;
      display: grid;
      grid-template:
        'main' 1fr
        'header' 40px
        'footer' 30px
        / 1fr;
    }

    .header {
      grid-area: header;
      background-color: red;
    }

    .main {
      grid-area: main;
      background-color: #60a5fa;
    }
    .footer {
      grid-area: footer;
      background-color: rgb(250, 250, 255);
    }
  }

  @media (width >= 769px) {
    .estructura {
      background-color: #60a5fa;
      display: grid;
      grid-template:
        'header' 40px
        'main' 1fr
        'footer' 30px
        / 1fr;
    }

    .header {
      grid-area: header;
    }

    .main {
      grid-area: main;
      background-color: #60a5fa;
    }
    .footer {
      grid-area: footer;
      background-color: rgb(250, 250, 255);
    }
  }
</style>
